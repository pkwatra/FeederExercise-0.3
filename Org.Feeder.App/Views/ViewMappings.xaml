<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Org.Feeder.App.ViewModels"
                    xmlns:views="clr-namespace:Org.Feeder.App.Views">

    <DataTemplate DataType="{x:Type viewModels:IntroViewModel}">
        <views:IntroView DataContext="{Binding}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:MainViewModel}">
        <views:MainView DataContext="{Binding}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:CommentViewModel}">
        <views:CommentView DataContext="{Binding}" />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewModels:ErrorViewModel}">
        <views:ErrorView DataContext="{Binding}" />
    </DataTemplate>

</ResourceDictionary>